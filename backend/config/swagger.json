{
    "openapi": "3.0.0",
    "info": {
        "title": "CorteXpres API",
        "version": "1.0.0",
        "description": "API REST para la gestión de una barbería"
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Servidor local"
        }
    ],
    "paths": {
        "/clientes": {
            "get": {
                "summary": "Obtener lista de clientes",
                "responses": {
                    "200": { "description": "Lista de clientes" }
                }
            },
            "post": {
                "summary": "Registrar un nuevo cliente",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nombre": { "type": "string" },
                                    "telefono": { "type": "string" }
                                },
                                "required": ["nombre", "telefono"]
                            }
                        }
                    }
                },
                "responses": {
                    "201": { "description": "Cliente registrado exitosamente" }
                }
            }
        },
        "/barberos": {
            "get": {
                "summary": "Obtener lista de barberos",
                "responses": {
                    "200": { "description": "Lista de barberos" }
                }
            }
        },
        "/citas": {
            "post": {
                "summary": "Crear una cita",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "cliente_id": { "type": "integer" },
                                    "barbero_id": { "type": "integer" },
                                    "fecha": { "type": "string", "format": "date" },
                                    "hora": { "type": "string", "format": "time" },
                                    "servicio_id": { "type": "integer" }
                                },
                                "required": ["cliente_id", "barbero_id", "fecha", "hora", "servicio_id"]
                            }
                        }
                    }
                },
                "responses": {
                    "201": { "description": "Cita creada exitosamente" }
                }
            }
        },
        "/servicios": {
            "get": {
                "summary": "Obtener lista de servicios",
                "responses": {
                    "200": { "description": "Lista de servicios disponibles" }
                }
            }
        },
        "/pagos": {
            "post": {
                "summary": "Registrar un pago",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "citaId": { "type": "integer" },
                                    "monto": { "type": "number" },
                                    "metodo": { "type": "string" }
                                },
                                "required": ["citaId", "monto", "metodo"]
                            }
                        }
                    }
                },
                "responses": {
                    "201": { "description": "Pago registrado exitosamente" }
                }
            }
        },
        "/horarios": {
            "get": {
                "summary": "Obtener lista de horarios",
                "responses": {
                    "200": { "description": "Lista de horarios disponibles" }
                }
            }
        }
    }
}
